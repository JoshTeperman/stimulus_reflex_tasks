<div class="row justify-content-center my-3" data-controller="list">
  <div class="col-10 col-lg-6">
    <div class="card">
      <div class="card-header"><%= list.name %></div>
      <div class="card-body p-0">
        <div class="list-group-flush">
          <%= render list.tasks.active.incomplete_first %>
        </div>
      </div>
      <div class="card-footer">
        <%= form_with(model: Task.new, url: tasks_path, data: { reflex: 'submit->List#create_task', list_target: 'form', list_id: list.id }) do |form| %>
          <div class="form-group d-flex flex-fill">
            <%= form.text_field :name, required: true, class: 'w-100', placeholder: 'What needs to be done?', data: { list_target: 'input' } %>
            <%= form.submit 'Add task' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
