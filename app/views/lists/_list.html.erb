<div class="row justify-content-center my-3" data-controller="list">
  <div class="col-10 col-lg-6">
    <div class="card">
      <div class="card-header"><%= list.name %></div>
      <div class="card-body p-0">
        <div class="list-group-flush" data-list-target="tasks">
          <%= render list.tasks.active %>
        </div>
      </div>
      <div class="card-footer">
        <%= bootstrap_form_with(model: @new_task, url: '', layout: :inline, id: dom_id(list), data: { reflex: 'submit->List#create_task', list_target: 'form', list_id: list.id }) do |form| %>
          <%= form.text_field :name, wrapper_class: 'flex-fill mr-2 w-100', skip_label: true, placeholder: 'What needs to be done?', data: { list_target: 'input' } %>
          <%= form.submit 'Add task' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
