<div class="row my-3" data-controller="list" id="<%= dom_id(list) %>" data-reflex-root="#<%= dom_id(list) %>">
  <div class="col">
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <%= list.name %>
        <%= link_to 'Delete', list_path(list), method: :delete, remote: true, data: { confirm: "Are you sure you want to delete #{list.name}?" }, class: 'text-danger' %>
      </div>
      <div class="card-body p-0">
        <div class="list-group-flush" data-list-target="tasks">
          <% if list.tasks.exists? %>
            <%= render list.tasks.active %>
          <% else %>
            <p class='p-4 mb-0'>No tasks</p>
          <% end %>
        </div>
      </div>
      <div class="card-footer">
        <%= bootstrap_form_with(model: @new_task, url: '', layout: :inline, id: dom_id(list), data: { reflex: 'submit->List#create_task', list_target: 'form', list_id: list.id }) do |form| %>
          <div class="form-group d-flex">
            <%= form.text_field :name, wrapper: false, skip_label: true, placeholder: 'What needs to be done?', class: 'task-name-input', data: { list_target: 'input' }, style: 'margin-right: 0.5rem;' %>
            <%= form.primary 'Add task' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
